

@{
    ViewData["Title"] = "Account Setting";
}

<div class="page-inner">
    <div class="page-header">
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Index">Account Setting</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Account Setting</div>
                    <div class="card-category">
                        @* Turn standard bootstrap alerts into "growl" like
                        notifications from
                        <a class="link"
                           href="http://bootstrap-notify.remabledesigns.com/">Bootstrap Notify</a> *@
                    </div>
                </div>
                <div class="card-body">
                    <div class="form">
                        <div class="form-group form-show-notify row">
                            <div class="col-lg-3 col-md-3 col-sm-4 text-end">
                                <label>Full-Name :</label>
                            </div>
                            <div class="col-lg-4 col-md-9 col-sm-8">
                                <input type="text"
                                       class="form-control"
                                       id="text_fullName"/>
                            </div>
                        </div>
                        <div class="form-group form-show-notify row">
                            <div class="col-lg-3 col-md-3 col-sm-4 text-end">
                                <label>Username :</label>
                            </div>
                            <div class="col-lg-4 col-md-9 col-sm-8">
                                <input type="text"
                                       class="form-control"
                                       id="text_userName" />
                            </div>
                        </div>
                        <div class="form-group form-show-notify row">
                            <div class="col-lg-3 col-md-3 col-sm-4 text-end">
                                <label>Password :</label>
                            </div>
                            <div class="col-lg-4 col-md-9 col-sm-8">
                                <input type="password"
                                       class="form-control"
                                       id="text_password" />
                            </div>
                        </div>
                        <div class="form-group form-show-notify row">
                            <div class="col-lg-3 col-md-3 col-sm-4 text-end">
                                <label>Department :</label>
                            </div>
                            <div class="col-lg-4 col-md-9 col-sm-8">
                                <select class="form-select input-fixed"
                                        id="notify_state">
                                    <option value="1">Admitting</option>
                                    <option value="2">OPD</option>
                                    <option value="3">Dialysis</option>
                                    <option value="4">Credit and Collection</option>
                                    <option value="5">Medical Records</option>
                                    <option value="6">CSSR</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form">
                        <div class="form-group from-show-notify row">
                            <div class="col-lg-3 col-md-3 col-sm-12"></div>
                            <div class="col-lg-4 col-md-9 col-sm-12">
                                <button id="save_account" class="btn w-50 btn-primary">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

