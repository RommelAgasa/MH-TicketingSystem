@page
@model RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="page-inner">
    <div class="row justify-content-md-center align-items-center">
        @*     <div class="col-md-4 d-none d-md-block">
        <img src="~/img/Sign up-bro.svg" class="img-fluid" alt="Metro Health Logo" />
    </div> *@
        <div class="col-md-7">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><strong>Create New Account</strong></h2>
                    @* <img src="~/img/02_Left_MetroHealthLogo_Blue.png" height="60" width="130" alt="Metro Health Logo" /> *@
                </div>
                <div class="card-body">
                    <section>
                        <form id="registerForm" asp-route-returnUrl="/User/Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="username" />
                                <label asp-for="Input.Username"></label>
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">

                                <select asp-for="Input.DepartmentID" asp-items="Model.Input.DepartmentList" aria-required="true" class="form-control input-square">
                                    <option disabled selected>Select Department</option>
                                </select>
                                <span asp-validation-for="Input.DepartmentID" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button id="registerSubmit" type="submit" class="btn btn-primary w-50 me-2">Save</button>
                                <a asp-controller="User" asp-action="Index" class="btn btn-secondary w-50" role="button">Cancel</a>
                            </div>
                            @*                         <p class="fw-bold mt-2 pt-1 mb-0">
                            Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                                                      class="link-info">Login</a>
                        </p> *@
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
